class Solution {
public:
    int jump(vector<int>& nums) {
        int jumps = 0;
        int currentend = 0;
        int farpoint =0;
        for(int i = 0 ; i < nums.size()-1 ; i++){
            farpoint = max(farpoint , i+nums[i]);
            if(i==currentend){
                jumps++;
                currentend = farpoint;
            }
        }
        return jumps;
    }
};
