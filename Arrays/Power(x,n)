class Solution {
public:
    double myPow(double x, int n) {
        long long N = n;
        if(N==0) return 1.0;
        if(N<0){
            x = 1/x;
            N=-N;
        }
         if(N==1) return x;

        double ans = myPow(x , N/2);
        if(N%2 != 0)  return ans*ans*x;
         else return ans*ans;
    }
    
};
